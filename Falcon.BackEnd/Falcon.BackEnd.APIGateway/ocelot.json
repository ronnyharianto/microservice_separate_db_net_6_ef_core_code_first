        {
            "UpstreamPathTemplate": "/product/{action}/{param1}",
            "UpstreamHttpMethod": [ "Get" ],
            "DownstreamPathTemplate": "/api/v1/product/{action}/{param1}",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7148
                }
            ]
        }
    ]
}